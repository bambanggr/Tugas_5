<h1>Listing articles</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Status</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><p class="text-justify"><%= article.content.truncate(100) %></p></td>
        <td><%= article.status %></td>
        <td><%= link_to 'Show', article, class:'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class:'btn btn-success' %></td>
        <td><%= link_to 'Destroy', article, method: :delete, class:'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class:'btn btn-default' %>
