<h1>Listing comments</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Id article</th>
      <th>Comment</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.article_id %></td>
        <td><%= comment.comment %></td>
        <td><%= comment.status %></td>
        <td><%= link_to 'Show', comment, class:'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment), class:'btn btn-default' %></td>
        <td><%= link_to 'Destroy', comment, class:'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path, class:'btn btn-default' %>
